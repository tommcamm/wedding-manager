# Database
# Format: postgres://username:password@hostname:port/database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/wedding

# Redis
REDIS_URL=redis://localhost:6379

# MinIO (S3-compatible object storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=wedding-manager
MINIO_USE_SSL=false

# SMTP Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=wedding@example.com

# Application settings
PUBLIC_BASE_URL=http://localhost:3000

# Your secret key for signing JWT tokens
BETTER_AUTH_SECRET=CHANGE_ME

# Default Admin User (only used if no admin exists)
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=change-me-on-first-login
DEFAULT_ADMIN_NAME=Wedding Administrator
DEFAULT_ADMIN_USERNAME=admin
